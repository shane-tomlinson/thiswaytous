<!DOCTYPE html>

<html>
<head>
	<title>This Way To.Us</title>
	<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
	<link href="client/css/thiswaytous.css" type="text/css" rel="stylesheet" />
</head>
<body>
	<section id="main">
		<div id="map">
			<img src="client/images/ajax-loader.gif" width=32 height=32 />
			<p>
				Determining location...
			</p>
		</div>

		<footer>
			<ul>
				<li><a class="button" href="#invite">Invite Friend</a></li>
				<li><a class="button" href="#enterCode">Enter Code</a></li>
			</ul>
		</footer>

	</section>

	<section id="userInfo" class="page">
		<h2>User Information</h2>

		<label for="enterName">Name:</label>
		<input type="text" data-field name="name" />

		<footer>
			<ul>
				<li><button class="submit">OK</button></li>
				<li><button class="cancel">Cancel</button></li>
			</ul>
		</footer>
	</section>

	<section id="enterCode" class="page">
		<label for="enterCodeForm">Enter Code:</label>
		<formset id="enterCodeForm">
			<ul>
				<li><input type="text" placeholder="XYZ" name="invite_code_1" maxlength=3 data-field/></li>
				<li><input type="text" placeholder="123" name="invite_code_2" maxlength=3 data-field/></li>
				<li><input type="text" placeholder="ABC" name="invite_code_3" maxlength=3 data-field/></li>
			</ul>
		</formset>

		<footer>
			<ul>
				<li><button class="submit">OK</button></li>
				<li><button class="cancel">Cancel</button></li>
			</ul>
		</footer>
	</section>

	<section id="invite" class="page">
		<h2>Invite Friend</h2>
		<h3>Read this code to your friend:</h3>
		<ul id="invitecode">
			<li name="invite_code_1" data-field>45X</li>
			<li name="invite_code_2" data-field>H5B</li>
			<li name="invite_code_3" data-field>9A0</li>
		</ul>
		<footer>
			<ul>
				<li><button class="submit">OK</button></li>
				<li><button class="cancel">Cancel</button></li>
			</ul>
		</footer>
	</section>

	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
	<script src="client/scripts/ext/LAB.min.js"></script>
	<script>
		$LAB.setOptions( {
			AlwaysPreserveOrder: true,
			BasePath: 'client/scripts/'
		} ).script( "ext/jquery-1.5.2.min.js" )
			.script( "ext/aframe-current-jquery.js" )
			.script( "thiswaytous.js" )
			.script( "userposition.js" )
			.script( "map.js" )
			.script( "page.js" )
			.script( "user.js" )
			.script( "currentUser.js" )
			.script( "users.js" )
			.script( "session.js" )
			.script( "invitePage.js" )
			.script( "joinPage.js" )
			.script( "network.js" )
			.script( "userInfoPage.js" )
			.script( "userMapMarkers.js" )
			.script( "initialize.js" );
	</script>

</body>
</html>
